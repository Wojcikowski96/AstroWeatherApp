<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.astroapp.Fragments.Moon"
    android:weightSum="12"
    android:background="@color/black"
    android:tag="moon"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:contentDescription="@string/moon_picture"
        android:src="@drawable/moon"
        />
    <TextView
        android:id="@+id/moonRiseTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/moonSetTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/nextNewMoonTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/nextFullMoonTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/moonPhaseTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/synodicMonthTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:gravity="center"
        />
</LinearLayout>